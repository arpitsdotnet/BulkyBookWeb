@page
@model Bulky.WebRazor.Pages.Categories.IndexModel

<div class="container">
    <div class="row pt-4 pb-3">
        <div class="col-6">
            <h2 class="text-primary">Category List </h2>
        </div>
        <div class="col-6 text-end">
            <a asp-page="/Categories/Create" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i>&nbsp;Create Category
            </a>
        </div>
    </div>
</div>

<table class="table table-bordered table-striped table-hover" style="width:100%;">
    <thead>
        <tr>
            <th>Category Name</th>
            <th>Display Order</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.CategoryList.OrderBy(x => x.CategoryDisplayOrder))
        {
            <tr>
                <td>@item.CategoryName</td>
                <td>@item.CategoryDisplayOrder</td>
                <td>
                    <div class="w-75 btn-group" role="group">
                        <a asp-page="/Categories/Edit" asp-route-categoryId="@item.CategoryId" class="btn btn-primary mx-2">
                            <i class="bi bi-pencil-square"></i>&nbsp;Edit
                        </a>
                        <a asp-page="/Categories/Delete" asp-route-categoryId="@item.CategoryId" class="btn btn-danger mx-2">
                            <i class="bi bi-trash3"></i>&nbsp;Delete
                        </a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>
