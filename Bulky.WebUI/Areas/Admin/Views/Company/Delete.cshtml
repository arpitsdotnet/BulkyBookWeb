@model Company

<form method="post">
    <input asp-for="Id" hidden />
    <div class="container">
        <div class="row pt-4 pb-3">
            <div class="col-6">
                <h2 class="text-primary">Delete Company</h2>
            </div>
            <div class="col-6 text-end">
            </div>
        </div>
        <div asp-validation-summary="All"></div>
    </div>
    <div class="mb-3 row">
        <label asp-for="Name" class="p-0"></label>
        <input asp-for="Name" class="form-control" disabled="disabled" />
    </div>
    <div class="mb-3 row">
        <label asp-for="StreetAddress" class="p-0"></label>
        <input asp-for="StreetAddress" class="form-control" disabled="disabled" />
    </div>
    <div class="mb-3 row">
        <label asp-for="City" class="p-0"></label>
        <input asp-for="City" class="form-control" disabled="disabled" />
    </div>
    <div class="mb-3 row">
        <label asp-for="State" class="p-0"></label>
        <input asp-for="State" class="form-control" disabled="disabled" />
    </div>
    <div class="mb-3 row">
        <label asp-for="PostalCode" class="p-0"></label>
        <input asp-for="PostalCode" class="form-control" disabled="disabled" />
    </div>
    <div class="mb-3 row">
        <label asp-for="PhoneNumber" class="p-0"></label>
        <input asp-for="PhoneNumber" class="form-control" disabled="disabled" />
    </div>
    <div class="row">
        <div class="col-6 col-md-3">
            <button type="submit" class="btn btn-danger form-control">Delete</button>
        </div>
        <div class="col-6 col-md-3">
            <a asp-controller="Company" asp-action="Index" class="btn btn-outline-secondary form-control">Back to List</a>
        </div>
    </div>
</form>