@model Product

<form method="post">
    <input asp-for="Id" hidden />
    <div class="container">
        <div class="row pt-4 pb-3">
            <div class="col-6">
                <h2 class="text-primary">Delete Product</h2>
            </div>
            <div class="col-6 text-end">
            </div>
        </div>
        <div asp-validation-summary="All"></div>
    </div>
    <div class="mb-3 row">
        <label asp-for="Title" class="p-0"></label>
        <input asp-for="Title" class="form-control" disabled="disabled" />
    </div>
    <div class="mb-3 row">
        <label asp-for="Description" class="p-0"></label>
        <textarea asp-for="Description" class="form-control" disabled="disabled"></textarea>
    </div>
    <div class="mb-3 row">
        <label asp-for="ISBN" class="p-0"></label>
        <input asp-for="ISBN" class="form-control" disabled="disabled" />
    </div>
    <div class="mb-3 row">
        <label asp-for="Author" class="p-0"></label>
        <input asp-for="Author" class="form-control" disabled="disabled" />
    </div>
    <div class="mb-3 row">
        <label asp-for="ListPrice" class="p-0"></label>
        <input asp-for="ListPrice" class="form-control" disabled="disabled" />
    </div>
    <div class="mb-3 row">
        <label asp-for="Price" class="p-0"></label>
        <input asp-for="Price" class="form-control" disabled="disabled" />
    </div>
    <div class="mb-3 row">
        <label asp-for="Price50" class="p-0"></label>
        <input asp-for="Price50" class="form-control" disabled="disabled" />
    </div>
    <div class="mb-3 row">
        <label asp-for="Price100" class="p-0"></label>
        <input asp-for="Price100" class="form-control" disabled="disabled" />
    </div>
    <div class="row">
        <div class="col-6 col-md-3">
            <button type="submit" class="btn btn-danger form-control">Delete</button>
        </div>
        <div class="col-6 col-md-3">
            <a asp-controller="Product" asp-action="Index" class="btn btn-outline-secondary form-control">Back to List</a>
        </div>
    </div>
</form>